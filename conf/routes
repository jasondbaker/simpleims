# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Dashboard page
GET     /                           controllers.Application.index()

# Incidents 
GET		/incidents					controllers.Incidents.getOwned()
GET		/incidents/unassigned		controllers.Incidents.getUnassigned()
GET		/incidents/:id				controllers.Incidents.get(id: Integer)
POST	/incidents					controllers.Incidents.add()
DELETE	/incidents/:incident		controllers.Incidents.delete(incident: Integer)
PUT		/incidents/:incident		controllers.Incidents.update(incident: Integer)

# User authentication
GET		/login						controllers.Application.login()
POST	/login						controllers.Application.authenticate()
GET		/logout						controllers.Application.logout()

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
